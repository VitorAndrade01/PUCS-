#include <stdio.h>

int main() {
    int num1, num2;

    // Leitura dos dois números
    printf("Digite o primeiro número: ");
    scanf("%d", &num1);

    printf("Digite o segundo número: ");
    scanf("%d", &num2);

    // Verificando se os números são iguais ou diferentes
    if (num1 == num2) {
        printf("Os números são iguais.\n");
    } else {
        printf("Os números são diferentes.\n");

        // Determinando o maior e o menor número
        if (num1 > num2) {
            printf("Maior número: %d\n", num1);
            printf("Menor número: %d\n", num2);
        } else {
            printf("Maior número: %d\n", num2);
            printf("Menor número: %d\n", num1);
        }
    }

    return 0;
}
